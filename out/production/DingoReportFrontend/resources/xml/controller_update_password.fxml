<?xml version="1.0" encoding="UTF-8"?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import ui.UIView?>

<UIView fx:id="root" xmlns="http://javafx.com/javafx"
        stylesheets="@../../ui/res/css/styles.css"
        xmlns:fx="http://javafx.com/fxml"
        prefHeight="400.0" prefWidth="600.0">
    <padding><Insets top="8" bottom="8" left="8" right="8"/></padding>
    <Pane>
        <VBox spacing="14" styleClass="container" alignment="CENTER">
            <padding><Insets top="8" bottom="8" left="8" right="8"/></padding>
            <JFXPasswordField fx:id="currentPassword"  promptText="Current Password"/>
            <JFXPasswordField fx:id="newPassword"  promptText="New Password"/>
            <JFXButton fx:id="submit" mnemonicParsing="false" styleClass="button-raised" text="Update Password" />
        </VBox>
    </Pane>
</UIView>