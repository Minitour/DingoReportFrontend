<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<fx:root stylesheets="@../../ui/res/css/styles.css,@../css/style.css" type="javafx.scene.layout.StackPane" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">

    <Pane  fx:id="parent" styleClass="container">
        <VBox fx:id="vbox"  prefWidth="${parent.width}" spacing="4">
            <padding><Insets top="8" left="8" right="8" bottom="8"/></padding>
            <Label fx:id="menu" text="Menu Item" styleClass="row-item">
                <font>
                    <Font name="Helvetica-Bold" size="16.0" />
                </font></Label>
        </VBox>
    </Pane>
</fx:root>
